{
  "dashboard": {
    "title": "LLM Firewall Monitoring",
    "tags": ["llm", "firewall", "security"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (req/s)",
        "type": "graph",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(firewall_requests_total[5m])",
            "legendFormat": "{{method}} {{path}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "reqps", "label": "Requests/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 2,
        "title": "Block Rate (%)",
        "type": "graph",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "(rate(firewall_blocked_total[5m]) / rate(firewall_requests_total[5m])) * 100",
            "legendFormat": "Block Rate %",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "percent", "label": "Block Rate", "min": 0, "max": 100 },
          { "format": "short" }
        ]
      },
      {
        "id": 3,
        "title": "Request Latency (P50, P95, P99)",
        "type": "graph",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(firewall_latency_seconds_bucket[5m]))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(firewall_latency_seconds_bucket[5m]))",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(firewall_latency_seconds_bucket[5m]))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Latency" },
          { "format": "short" }
        ]
      },
      {
        "id": 4,
        "title": "Total Requests",
        "type": "stat",
        "gridPos": { "x": 12, "y": 8, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(firewall_requests_total)",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value"
        }
      },
      {
        "id": 5,
        "title": "Total Blocked",
        "type": "stat",
        "gridPos": { "x": 18, "y": 8, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(firewall_blocked_total)",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 10, "color": "yellow" },
                { "value": 100, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "PII Detections by Type",
        "type": "graph",
        "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(firewall_pii_detections_total[5m])",
            "legendFormat": "{{type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Detections/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 7,
        "title": "Prompt Injection Attempts",
        "type": "graph",
        "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(firewall_prompt_injections_total[5m])",
            "legendFormat": "{{category}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Attempts/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 8,
        "title": "Rate Limit Violations",
        "type": "graph",
        "gridPos": { "x": 0, "y": 24, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(firewall_rate_limit_violations_total[5m])",
            "legendFormat": "{{type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Violations/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 9,
        "title": "Requests by Status Code",
        "type": "piechart",
        "gridPos": { "x": 12, "y": 24, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum by (status) (firewall_requests_by_status_total)",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 10,
        "title": "Blocked Requests by Reason",
        "type": "piechart",
        "gridPos": { "x": 0, "y": 32, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "sum by (reason) (firewall_blocked_total)",
            "legendFormat": "{{reason}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 11,
        "title": "Average Response Time (5m)",
        "type": "stat",
        "gridPos": { "x": 12, "y": 32, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "avg(rate(firewall_latency_seconds_sum[5m]) / rate(firewall_latency_seconds_count[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value",
          "unit": "s"
        }
      },
      {
        "id": 12,
        "title": "Audit Queue Size",
        "type": "graph",
        "gridPos": { "x": 18, "y": 32, "w": 6, "h": 8 },
        "targets": [
          {
            "expr": "firewall_audit_queue_size",
            "legendFormat": "Queue Size",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Items" },
          { "format": "short" }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [800],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "name": "Audit Queue Alert",
          "message": "Audit log queue is getting full (>800 items)"
        }
      },
      {
        "id": 13,
        "title": "ML Jailbreak Detections (Phase 5.1)",
        "type": "graph",
        "gridPos": { "x": 0, "y": 40, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(firewall_ml_jailbreak_detections_total[5m])",
            "legendFormat": "ML Detections/sec",
            "refId": "A"
          },
          {
            "expr": "rate(firewall_prompt_injections_total{category=\"direct_injection\"}[5m])",
            "legendFormat": "Regex Detections/sec",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Detections/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 14,
        "title": "ML vs Regex Agreement Rate",
        "type": "stat",
        "gridPos": { "x": 12, "y": 40, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "(sum(firewall_ml_ab_test_agreement_total{agreement=\"true\"}) / sum(firewall_ml_ab_test_total)) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value_and_name",
          "unit": "percent"
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "red" },
                { "value": 70, "color": "yellow" },
                { "value": 90, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 15,
        "title": "ML Inference Time (ms)",
        "type": "graph",
        "gridPos": { "x": 18, "y": 40, "w": 6, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(firewall_ml_inference_time_ms_bucket[5m]))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(firewall_ml_inference_time_ms_bucket[5m]))",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(firewall_ml_inference_time_ms_bucket[5m]))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "yaxes": [
          { "format": "ms", "label": "Inference Time" },
          { "format": "short" }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [60],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["C", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "name": "ML Inference Slow",
          "message": "ML inference P99 latency exceeds 60ms target"
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus"
        }
      ]
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"]
    }
  }
}
